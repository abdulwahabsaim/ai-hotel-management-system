<%- include('../../partials/header') %>

<div class="bg-gray-100 min-h-full">
    <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-2xl font-bold text-gray-900">Add New Room</h2>
                <p class="mt-1 text-sm text-gray-500">Create a new room listing for the hotel.</p>
                
                <form action="/admin/rooms" method="POST" class="mt-6 space-y-6">
                    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                        <div class="sm:col-span-2">
                            <label for="roomNumber" class="block text-sm font-medium text-gray-700">Room Number</label>
                            <input type="text" name="roomNumber" id="roomNumber" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
                        </div>
                        <div class="sm:col-span-2">
                            <label for="type" class="block text-sm font-medium text-gray-700">Room Type</label>
                            <select id="type" name="type" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                                <option>Single</option><option>Double</option><option>Suite</option>
                            </select>
                        </div>
                        <div class="sm:col-span-2">
                            <label for="price" class="block text-sm font-medium text-gray-700">Price per Night ($)</label>
                            <input type="number" name="price" id="price" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" min="0" required>
                        </div>
                        <div class="sm:col-span-6">
                            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea id="description" name="description" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                        </div>
                        <div class="sm:col-span-6">
                            <label for="amenities" class="block text-sm font-medium text-gray-700">Amenities</label>
                            <input type="text" name="amenities" id="amenities" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="e.g., Free WiFi, Air Conditioning, TV">
                            <p class="mt-2 text-xs text-gray-500">Enter amenities separated by a comma.</p>
                        </div>
                        <div class="sm:col-span-6">
                            <label for="images" class="block text-sm font-medium text-gray-700">Gallery Image URLs</label>
                            <input type="text" name="images" id="images" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="e.g., /img/room1.jpg, /img/room2.jpg">
                             <p class="mt-2 text-xs text-gray-500">Enter image paths separated by a comma.</p>
                        </div>
                        <div class="sm:col-span-6">
                            <label for="virtualTourImages" class="block text-sm font-medium text-gray-700">360Â° Tour Image URLs</label>
                            <input type="text" name="virtualTourImages" id="virtualTourImages" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="e.g., /img/tours/suite_1.jpg, /img/tours/suite_2.jpg">
                            <p class="mt-2 text-xs text-gray-500">Enter panoramic image paths separated by a comma. Leave blank if none.</p>
                        </div>
                    </div>
                    <div class="pt-5">
                        <div class="flex justify-end gap-x-3">
                            <a href="/admin/rooms" class="py-2 px-4 bg-white border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Cancel</a>
                            <button type="submit" class="py-2 px-4 bg-blue-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700">Create Room</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>