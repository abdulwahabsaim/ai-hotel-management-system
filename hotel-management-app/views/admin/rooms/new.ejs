<%- include('../../partials/header') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2>Add New Room</h2>
                </div>
                <div class="card-body">
                    <form action="/admin/rooms" method="POST">
                        <div class="mb-3">
                            <label for="roomNumber" class="form-label">Room Number</label>
                            <input type="text" class="form-control" name="roomNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="type" class="form-label">Room Type</label>
                            <select name="type" class="form-select" required>
                                <option value="Single">Single</option>
                                <option value="Double">Double</option>
                                <option value="Suite">Suite</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price per Night ($)</label>
                            <input type="number" class="form-control" name="price" required min="0">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="amenities" class="form-label">Amenities</label>
                            <input type="text" class="form-control" name="amenities" placeholder="e.g., Free WiFi, Air Conditioning, TV">
                            <div class="form-text">Enter amenities separated by a comma.</div>
                        </div>
                        <div class="mb-3">
                            <label for="images" class="form-label">Image URLs</label>
                            <input type="text" class="form-control" name="images" placeholder="e.g., /img/room1.jpg, /img/room2.jpg">
                            <div class="form-text">Enter image paths separated by a comma.</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Room</button>
                        <a href="/admin/rooms" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>