<%- include('../partials/header') %>

<div class="bg-gray-50 dark:bg-gray-900 min-h-full">
<div class="container mx-auto px-4 py-12 lg:py-16">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">My Bookings</h1>
    <p class="mt-3 text-lg text-gray-600 dark:text-gray-300">Here are your past and upcoming bookings. You can manage active bookings here.</p>
    
    <% if (bookings.length > 0) { %>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-800">
                                <tr>
                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-6">Room</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Check-in</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Check-out</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Total Price</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Status</th>
                                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6"><span class="sr-only">Actions</span></th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-800">
                                <% bookings.forEach(booking => { %>
                                    <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                                            <div class="font-medium text-gray-900 dark:text-white">Room <%= booking.room.roomNumber %></div>
                                            <div class="text-gray-500 dark:text-gray-400"><%= booking.room.type %></div>
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400"><%= new Date(booking.checkInDate).toLocaleDateString() %></td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400"><%= new Date(booking.checkOutDate).toLocaleDateString() %></td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900 dark:text-white font-medium">$<%= booking.totalPrice %></td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400">
                                             <% if (booking.status === 'Active') { %><span class="inline-flex items-center rounded-md bg-green-50 dark:bg-green-900/50 px-2 py-1 text-xs font-medium text-green-700 dark:text-green-300 ring-1 ring-inset ring-green-600/20 dark:ring-green-500/30">Active</span><% } else if (booking.status === 'Canceled') { %><span class="inline-flex items-center rounded-md bg-red-50 dark:bg-red-900/50 px-2 py-1 text-xs font-medium text-red-700 dark:text-red-300 ring-1 ring-inset ring-red-600/10 dark:ring-red-500/30">Canceled</span><% } else { %><span class="inline-flex items-center rounded-md bg-gray-50 dark:bg-gray-700/50 px-2 py-1 text-xs font-medium text-gray-600 dark:text-gray-300 ring-1 ring-inset ring-gray-500/10 dark:ring-gray-400/30">Completed</span><% } %>
                                        </td>
                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                            <div class="flex items-center justify-end gap-x-4">
                                                <a href="/user/invoice/<%= booking._id %>" class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400" title="View Invoice"><i class="fa-solid fa-file-invoice"></i></a>
                                                <% const canCancel = new Date(booking.checkInDate) > new Date(Date.now() + 48 * 60 * 60 * 1000); %>
                                                <% if (booking.status === 'Active' && canCancel) { %>
                                                    <form action="/user/booking/cancel/<%= booking._id %>?_method=PUT" method="POST" onsubmit="return confirm('Are you sure?');"><button type="submit" class="text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400" title="Cancel Booking"><i class="fa-solid fa-ban"></i></button></form>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="mt-8 text-center bg-white dark:bg-gray-800 p-12 rounded-lg shadow-sm">
             <i class="fa-solid fa-book-open text-4xl text-gray-400 dark:text-gray-500"></i>
            <p class="mt-4 text-lg text-gray-700 dark:text-gray-300">You have no bookings yet.</p>
            <a href="/rooms" class="inline-block mt-4 px-5 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700">Find a Room</a>
        </div>
    <% } %>
</div>
</div>

<%- include('../partials/footer') %>