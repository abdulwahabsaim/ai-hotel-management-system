<%- include('../partials/header') %>

<div class="bg-gray-50 dark:bg-gray-900 min-h-full">
<div class="container mx-auto px-4 py-12 lg:py-16">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">My Profile</h1>
    <p class="mt-3 text-lg text-gray-600 dark:text-gray-300">Update your personal information and change your password.</p>
    
    <div class="mt-10 grid grid-cols-1 lg:grid-cols-2 gap-10">
        <!-- Update Profile Information -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Profile Information</h2>
             <form action="/user/profile" method="POST" class="mt-6 space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                    <input type="text" class="form-input mt-1 block w-full dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:placeholder-gray-400" id="name" name="name" value="<%= user.name %>" required>
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                    <input type="email" class="form-input mt-1 block w-full bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 dark:border-gray-600" id="email" name="email" value="<%= user.email %>" disabled readonly>
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Your email address cannot be changed.</p>
                </div>
                <button type="submit" class="py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700">Update Profile</button>
            </form>
        </div>

        <!-- Change Password -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
             <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Change Password</h2>
            <form action="/user/password" method="POST" class="mt-6 space-y-6">
                <div>
                    <label for="currentPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Current Password</label>
                    <input type="password" class="form-input mt-1 block w-full dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:placeholder-gray-400" id="currentPassword" name="currentPassword" required>
                </div>
                <div>
                    <label for="newPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">New Password</label>
                    <input type="password" class="form-input mt-1 block w-full dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:placeholder-gray-400" id="newPassword" name="newPassword" required minlength="6">
                </div>
                <div>
                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm New Password</label>
                    <input type="password" class="form-input mt-1 block w-full dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:placeholder-gray-400" id="confirmPassword" name="confirmPassword" required>
                </div>
                <button type="submit" class="py-2 px-4 bg-yellow-500 text-white font-semibold rounded-md hover:bg-yellow-600">Change Password</button>
            </form>
        </div>
    </div>
</div>
</div>

<%- include('../partials/footer') %>