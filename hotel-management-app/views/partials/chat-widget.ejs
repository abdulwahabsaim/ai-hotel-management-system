<!-- Chat Bubble -->
<div id="chat-bubble" class="fixed bottom-5 right-5 z-50 cursor-pointer w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center shadow-lg transform hover:scale-110 transition-transform">
    <i class="fa-solid fa-robot text-white text-2xl"></i>
</div>

<!-- Chat Window -->
<div id="chat-window" class="hidden fixed bottom-24 right-5 z-50 w-full max-w-sm">
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg flex flex-col h-[60vh]">
        <!-- Header -->
        <div class="bg-blue-600 text-white p-4 rounded-t-lg flex justify-between items-center">
            <h3 class="font-semibold">AI Hotel Concierge</h3>
            <button id="close-chat" class="text-white hover:text-gray-200">
                <i class="fa-solid fa-xmark fa-lg"></i>
            </button>
        </div>

        <!-- Message Area -->
        <div id="chat-messages" class="flex-grow p-4 space-y-4 overflow-y-auto">
            <!-- Initial Greeting -->
            <div class="flex">
                <div class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 p-3 rounded-lg max-w-xs">
                    <p>Hello! I'm Al, your AI Concierge. How can I help you today? You can ask me about our rooms, amenities, or help you find a room.</p>
                </div>
            </div>
        </div>

        <!-- Input Area -->
        <div class="p-4 border-t border-gray-200 dark:border-gray-700">
            <form id="chat-form" class="flex items-center gap-2">
                <input type="text" id="chat-input" placeholder="Ask me anything..." class="form-input flex-grow rounded-md" autocomplete="off" required>
                <button type="submit" id="chat-submit" class="w-10 h-10 bg-blue-600 text-white rounded-md flex-shrink-0 flex items-center justify-center">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </form>
        </div>
    </div>
</div>