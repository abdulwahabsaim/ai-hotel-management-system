<!-- Chat Bubble -->
<div id="chat-bubble" class="fixed bottom-5 right-5 z-50 cursor-pointer w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center shadow-lg transform hover:scale-110 transition-transform">
    <i class="fa-solid fa-robot text-white text-2xl"></i>
</div>

<!-- Chat Window -->
<div id="chat-window" class="hidden fixed bottom-24 right-5 z-50 w-full max-w-sm">
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg flex flex-col h-[70vh] max-h-[600px]">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white p-4 rounded-t-lg flex justify-between items-center shadow-md">
            <div>
                <h3 class="font-bold text-lg">AI Hotel Concierge</h3>
                <p class="text-xs text-blue-200">Powered by GitHub Models</p>
            </div>
            <button id="close-chat" class="text-white hover:text-blue-200 transition-colors">
                <i class="fa-solid fa-xmark fa-lg"></i>
            </button>
        </div>

        <!-- Message Area -->
        <div id="chat-messages" class="flex-grow p-4 space-y-4 overflow-y-auto">
            <!-- Initial Greeting -->
            <div class="flex">
                <div class="chat-bubble-ai">
                    <p>Hello! I'm Al, your AI Concierge. How can I help you today? You can ask me to check room availability for specific dates!</p>
                </div>
            </div>
        </div>
        
        <!-- Suggested Actions Area -->
        <div id="suggested-actions" class="p-2 border-t border-gray-200 dark:border-gray-700 flex flex-wrap gap-2 justify-center">
            <!-- Quick reply buttons will be injected here by JS -->
        </div>

        <!-- Input Area -->
        <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 rounded-b-lg">
            <form id="chat-form" class="flex items-center gap-2">
                <input type="text" id="chat-input" placeholder="Ask about rooms & dates..." class="form-input flex-grow rounded-md" autocomplete="off" required>
                <button type="submit" id="chat-submit" class="w-10 h-10 bg-blue-600 text-white rounded-md flex-shrink-0 flex items-center justify-center transition-colors hover:bg-blue-700 disabled:bg-blue-400">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </form>
        </div>
    </div>
</div>