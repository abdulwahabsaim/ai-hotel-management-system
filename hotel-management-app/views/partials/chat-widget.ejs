<!-- Chat Bubble -->
<div id="chat-bubble" class="fixed bottom-5 right-5 z-50 cursor-pointer w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center shadow-lg transition-transform duration-300 ease-out hover:scale-110">
    <i id="chat-bubble-icon" class="fa-solid fa-robot text-white text-2xl transition-all duration-300"></i>
    <i id="chat-bubble-close-icon" class="fa-solid fa-chevron-down text-white text-2xl absolute opacity-0 scale-75 transition-all duration-300"></i>
</div>

<!-- Chat Window -->
<div id="chat-window" class="hidden fixed bottom-28 right-5 z-40 w-full max-w-sm">
    <div id="chat-container" class="bg-white dark:bg-gray-800 shadow-2xl rounded-2xl flex flex-col h-[70vh] max-h-[600px] overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white p-4 rounded-t-2xl flex justify-between items-center shadow-md flex-shrink-0">
            <div>
                <h3 class="font-bold text-lg">AI Hotel Concierge</h3>
                <p class="text-xs text-blue-200">Online and ready to help</p>
            </div>
            <button id="close-chat" class="text-white hover:text-blue-200 transition-colors">
                <i class="fa-solid fa-xmark fa-lg"></i>
            </button>
        </div>

        <!-- Message Area -->
        <div id="chat-messages" class="flex-grow p-4 space-y-4 overflow-y-auto bg-pattern">
            <!-- Initial Greeting -->
            <div class="flex items-end gap-2.5">
                <div class="w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center flex-shrink-0">
                    <i class="fa-solid fa-robot text-gray-600 dark:text-gray-300"></i>
                </div>
                <div class="chat-bubble-ai">
                    <p>Hello! I'm Al, your personal AI Concierge. How can I assist you with your stay today?</p>
                </div>
            </div>
        </div>

        <!-- Suggested Actions Area -->
        <div id="suggested-actions" class="p-2 border-t border-gray-200 dark:border-gray-700 flex flex-wrap gap-2 justify-center flex-shrink-0">
            <!-- Quick reply buttons will be injected here by JS -->
        </div>

        <!-- Input Area -->
        <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 rounded-b-2xl flex-shrink-0">
            <form id="chat-form" class="flex items-center gap-2">
                <!-- ADDED CLASSES: text-gray-900 dark:text-white dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 -->
                <input type="text" id="chat-input" placeholder="Ask about rooms & dates..." class="form-input flex-grow rounded-full px-4 text-gray-900 dark:text-white dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" autocomplete="off" required>
                <button type="submit" id="chat-submit" class="w-10 h-10 bg-blue-600 text-white rounded-full flex-shrink-0 flex items-center justify-center transition-all duration-300 scale-90 opacity-50 cursor-not-allowed">
                    <i class="fa-solid fa-arrow-up"></i>
                </button>
            </form>
        </div>
    </div>
</div>