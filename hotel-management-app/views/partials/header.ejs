<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | AI Hotel</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Tailwind CSS Output -->
    <link rel="stylesheet" href="/css/output.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
</head>

<body class="h-full flex flex-col font-sans text-gray-800">
    <header class="bg-white/80 backdrop-blur-md shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-4 lg:px-6 py-3">
            <div class="flex items-center justify-between">
                <a class="text-xl font-bold text-gray-900 flex items-center gap-2" href="/">
                    <i class="fa-solid fa-hotel text-blue-600"></i> AI Hotel
                </a>

                <!-- Desktop Menu -->
                <div class="hidden lg:flex items-center gap-6">
                    <a class="text-gray-600 hover:text-blue-600 transition-colors" href="/">Home</a>
                    <a class="text-gray-600 hover:text-blue-600 transition-colors" href="/rooms">Rooms</a>
                    <a class="text-gray-600 hover:text-blue-600 transition-colors" href="/gallery">Gallery</a>
                </div>

                <!-- User/Guest Actions -->
                <div class="hidden lg:flex items-center gap-4">
                    <% if (user) { %>
                        <div class="relative" data-controller="dropdown">
                            <button type="button" class="flex items-center gap-2 text-gray-600 hover:text-blue-600" data-action="dropdown#toggle">
                                <i class="fa-solid fa-user-circle"></i>
                                <span>Welcome, <%= user.name %></span>
                                <i class="fa-solid fa-chevron-down text-xs"></i>
                            </button>
                            <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 hidden" data-dropdown-target="menu">
                                <div class="py-1">
                                    <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/user/dashboard">My Bookings</a>
                                    <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/user/profile">My Profile</a>
                                    <% if (user.role === 'admin') { %>
                                        <div class="border-t border-gray-100 my-1"></div>
                                        <p class="px-4 pt-2 pb-1 text-xs text-gray-500 uppercase">Admin Panel</p>
                                        <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/admin/dashboard">Dashboard</a>
                                        <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/admin/bookings">Manage Bookings</a>
                                        <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/admin/users">Manage Users</a>
                                        <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/admin/rooms">Manage Rooms</a>
                                    <% } %>
                                    <div class="border-t border-gray-100 my-1"></div>
                                    <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" href="/auth/logout">Logout</a>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="text-sm font-medium text-gray-600 hover:text-blue-600 transition-colors">Login</a>
                        <a href="/auth/signup" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">Sign Up</a>
                    <% } %>
                </div>

                <!-- Mobile Menu Button -->
                <div class="lg:hidden">
                    <button id="mobile-menu-button" class="text-gray-600 hover:text-blue-600">
                        <i class="fa-solid fa-bars fa-lg"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden mt-4">
                <a class="block py-2 text-gray-600 hover:text-blue-600" href="/">Home</a>
                <a class="block py-2 text-gray-600 hover:text-blue-600" href="/rooms">Rooms</a>
                <a class="block py-2 text-gray-600 hover:text-blue-600" href="/gallery">Gallery</a>
                <div class="border-t border-gray-200 mt-2 pt-2">
                    <% if (user) { %>
                         <a class="block py-2 font-semibold text-gray-700" href="/user/dashboard">My Dashboard</a>
                         <a class="block py-2 text-gray-600" href="/user/profile">My Profile</a>
                         <% if (user.role === 'admin') { %>
                            <a class="block py-2 text-blue-600" href="/admin">Admin Panel</a>
                         <% } %>
                         <a class="block py-2 text-gray-600" href="/auth/logout">Logout</a>
                    <% } else { %>
                        <a href="/auth/login" class="block py-2 text-gray-600">Login</a>
                        <a href="/auth/signup" class="block mt-2 px-4 py-2 bg-blue-600 text-white text-center font-medium rounded-md hover:bg-blue-700">Sign Up</a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow">
        <!-- Flash Messages Container -->
        <% if ((locals.success_msg && success_msg.length > 0) || (locals.error_msg && error_msg.length > 0)) { %>
            <div class="fixed top-20 right-5 z-50 w-full max-w-sm">
                 <%- include('flash-messages') %>
            </div>
        <% } %>